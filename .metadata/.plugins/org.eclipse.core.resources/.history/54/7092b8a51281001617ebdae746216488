		pac = new pacman(GARDEN_X + GARDEN_W/2 + GARDEN_Y+GARDEN_H/2, 50, 50, 2);		
	}
	
	public void paintComponent(Graphics g)
	{
		super.paintComponent(g);
		Graphics2D g2 = (Graphics) g;
		
	}
	
