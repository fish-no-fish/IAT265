package movingobjects;

import java.awt.Graphics2D;
import java.awt.image.BufferedImage;
import java.io.IOException;

import javax.imageio.ImageIO;

public class SGPump extends MovingObjects
{
	private BufferedImage pump, cover;
	
	public SGPump(double posx, double posy) {
		super(posx, posy);
		// TODO Auto-generated constructor stub

		try {
			pump = ImageIO.read(getClass().getResourceAsStream("/graphics/SGPump.png"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		try {
			cover = ImageIO.read(getClass().getResourceAsStream("/graphics/SGCover.png"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	@Override
	public void draw(Graphics2D g2) {
		// TODO Auto-generated method stub
		old = g2.getTransform();
		g2.translate(posx, posy);
		g2.drawImage(pump, -pump.getWidth()/2, -pump.getHeight()/2, pump.getWidth(), pump.getHeight(), null);
		g2.drawImage(cover, -pump.getWidth()/2, -pump.getHeight()/2, pump.getWidth(), pump.getHeight(), null);
		g2.setTransform(old);
	}

}
