package movingobjects;

import java.awt.Graphics2D;
import java.awt.image.BufferedImage;
import java.io.IOException;

import javax.imageio.ImageIO;

public class SGPump extends MovingObjects
{
	private BufferedImage pump, cover;
	
	public SGPump(double posx, double posy) {
		super(posx, posy);
		// TODO Auto-generated constructor stub

		try {
			pump = ImageIO.read(getClass().getResourceAsStream("/graphics/SGPump.png"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		try {
			cover = ImageIO.read(getClass().getResourceAsStream("/graphics/SGCover.png"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		width = pump.getWidth();
		height = pump.getHeight();
		oldX = posx;
	}

	@Override
	public void draw(Graphics2D g2) {
		// TODO Auto-generated method stub
		g2.drawImage(pump, (int)(posx-width/2), (int)(posy-height/2), (int)width, (int)height, null);
//		g2.drawImage(cover, -cover.getWidth()/2, -cover.getHeight()/2, cover.getWidth(), cover.getHeight(), null);
	}

}
