package movingobjects;

import java.awt.Graphics2D;
import java.awt.image.BufferedImage;
import java.io.IOException;

import javax.imageio.ImageIO;

public class ShotGun extends MovingObjects
{
	private BufferedImage overlay, pump;

	public ShotGun(double posx, double posy) {
		super(posx, posy);
		// TODO Auto-generated constructor stub
		try {
			avatar = ImageIO.read(getClass().getResourceAsStream("/graphics/SGBase.png"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		try {
			overlay = ImageIO.read(getClass().getResourceAsStream("/graphics/SGOverlay.png"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		try {
			pump = ImageIO.read(getClass().getResourceAsStream("/graphics/SGPump.png"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

	@Override
	public void draw(Graphics2D g2) {
		// TODO Auto-generated method stub
		old = g2.getTransform();
		oldC = g2.getComposite();
		g2.translate(posx, posy);
		
		g2.drawImage(overlay, 0, 0, overlay.getWidth(), overlay.getHeight(), null);
		g2.drawImage(pump, 0, 0, pump.getWidth(), pump.getHeight(), null);
		g2.drawImage(base, 0,0, base.getWidth(), base.getHeight(), null);
		
		g2.setComposite(oldC);
		g2.setTransform(old);
	}

}
