import java.awt.*;
import javax.swing.*;

public class FishPanel extends JPanel
{
	public final static int WIN_H = 600;
	public final static int WIN_W = 800;
	
	private Fish fish;
	
	public FishPanel()
	{
		setPreferredSize(new Dimension(WIN_W,WIN_H));
//		TODO awaiting constructor
		fish = new Fish(0,0,500,500);
	}
	
	public void paintComponent(Graphics2D g)
	{
		super.paintComponent(g);	
		g.setColor(Color.white);
		
		g.fillRect(0, 0, WIN_H, WIN_W);
		
		fish.drawFish(g);
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		JFrame frame = new JFrame("Fishies");
		FishPanel fishPanel = new FishPanel();
		
		frame.add(fishPanel);
		
		frame.pack();
		frame.setVisible(true);
	}

}
